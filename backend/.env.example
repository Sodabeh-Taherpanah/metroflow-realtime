# Backend environment variables
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/metroflow
# Or for MongoDB: DATABASE_URL=mongodb://user:password@localhost:27017/metroflow

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=3600

# Logging
LOG_LEVEL=debug

# Sentry
SENTRY_DSN=

# Cron jobs
ENABLE_CRON_JOBS=true

# External APIs
VBB_API_URL=https://api.vbb.de
BVG_API_URL=https://api.bvg.de
